<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyb.blogserver.dao.TecLearningMapper">
  <resultMap id="tecLearningMap" type="com.cyb.blogserver.domain.TecLearning">
    <id column="teclearning_id" jdbcType="VARCHAR" property="id" />
    <result column="author" jdbcType="VARCHAR" property="author" />
    <result column="teclearning_title" jdbcType="VARCHAR" property="title" />
    <result column="category" jdbcType="VARCHAR" property="category" />
    <result column="tag" jdbcType="VARCHAR" property="tag" />
    <result column="preface" jdbcType="VARCHAR" property="preface" />
    <result column="teclearning_img" jdbcType="VARCHAR" property="img" />
    <result column="teclearning_create_date" jdbcType="DATE" property="createDate" />

    <collection property="chapterList" ofType="com.cyb.blogserver.domain.Chapter" column="teclearning_id">
      <id column="chapter_id" jdbcType="VARCHAR" property="id" />
      <result column="teclearning_id" jdbcType="VARCHAR" property="teclearningId" />
      <result column="chapter_title" jdbcType="VARCHAR" property="title" />
      <result column="description" jdbcType="VARCHAR" property="description" />
      <result column="content" jdbcType="VARCHAR" property="content" />
      <result column="chapter_img" jdbcType="VARCHAR" property="img" />
      <result column="chapter_create_date" jdbcType="TIMESTAMP" property="createDate" />
    </collection>
  </resultMap>

  <!-- 添加 -->
  <insert id="insert" parameterType="com.cyb.blogserver.domain.TecLearning">
    INSERT INTO teclearning
    (teclearning_id, author, teclearning_title, category, tag, preface, teclearning_img, teclearning_create_date)
    VALUES (#{id}, #{author}, #{title}, #{category}, #{tag}, #{preface}, #{img}, #{createDate})
  </insert>

  <!-- 删除 -->
  <delete id="deleteByPrimaryKey">

  </delete>

  <!-- 修改 -->
  <update id="updateByPrimaryKey">

  </update>

  <!-- 查询 -->
  <select id="selectByPrimaryKey" resultMap="tecLearningMap">
    SELECT * FROM teclearning WHERE id = #{id}
  </select>

  <select id="selectOneByTecLearning" resultMap="tecLearningMap">
    SELECT *
    FROM teclearning
    <where>
      <if test="title != null and title !=''">
        AND teclearning_title = #{title}
      </if>
      <if test="category != null and category !=''">
        AND category = #{category}
      </if>
      <if test="tag != null and tag !=''">
        AND tag = #{tag}
      </if>
    </where>
  </select>

  <select id="selectByTecLearning" resultMap="tecLearningMap">
    SELECT
        t.*,
        c.*
    FROM
        (SELECT * FROM teclearning  WHERE teclearning_id IN
            (SELECT DISTINCT teclearning_id FROM
                (SELECT * FROM teclearning ORDER BY teclearning_create_date DESC LIMIT #{pagenation.offset}, #{pagenation.pageSize}) a
            )
        ) t
    LEFT JOIN chapter c
    ON t.teclearning_id = c.teclearning_id
    ORDER BY
        t.teclearning_create_date DESC,
        c.chapter_create_date ASC
  </select>

</mapper>